#!/bin/bash

URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Output files
DATA_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the request
curl -s -o "$DATA_FILE" -w "%{http_code}" "$URL" > status.txt

if [ "$(cat status.txt)" -ne 200 ]; then
    echo "Error: Failed to fetch data from $URL" >> "$ERROR_FILE"
    rm -f "$DATA_FILE"  # Remove partial data if failed
fi

# Clean up
rm -f status.txt
